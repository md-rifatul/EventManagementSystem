@model IEnumerable<Event>

@{
    ViewBag.Title = "All Events";
    Layout = "_Layout"; // Make sure your _Layout.cshtml is set up
}

<h2>All Events</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Event ID</th>
            <th>Event Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Address</th>
            <th>Assigned User</th>
            <th>User Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.EventId</td>
                <td>@ev.EventName</td>
                <td>@ev.Description</td>
                <td>@ev.Date.ToString("yyyy-MM-dd")</td>
                <td>@ev.Address</td>
                <td>@ev.AssignedUser.FirstName @ev.AssignedUser.LastName</td>
                <td>@ev.AssignedUser.UserType</td>
            </tr>
        }
    </tbody>
</table>
